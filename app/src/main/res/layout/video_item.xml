<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/video_item_height"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/video_item_padding"
                android:paddingRight="@dimen/video_item_padding">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/video_image_width"
        android:layout_height="@dimen/video_image_height"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/video_item_title_margin"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="studio"/>
    </LinearLayout>


</RelativeLayout>